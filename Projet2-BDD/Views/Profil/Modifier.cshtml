@model Projet2_BDD.ViewModels.ProfilViewModel

@{
    Layout = "~/Views/Shared/LayoutTest.cshtml";

}

<body>

    <div> @Html.ActionLink("Retour au Profil", "Index", "Profil") </div>


    <div>
        <h6> Modifier votre Profil : </h6>

        @using (Html.BeginForm("Modifier", "Profil", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-input">
                @Html.LabelFor(m => m.Profil.Email)
                @Html.TextBoxFor(m => m.Profil.Email, new { @class = "form-control", required = "" })

                @Html.ValidationMessageFor(m => m.Profil.Email)
            </div>
        @*    <div class="form-input">
                @Html.LabelFor(m => m.Profil.Password)
                @Html.TextBoxFor(m => m.Profil.Password, new { @class = "form-control", required = "" })

                @Html.ValidationMessageFor(m => m.Profil.Password)
            </div>
            *@
            <div class="form-input">
                @Html.LabelFor(m => m.Profil.Ville)
                @Html.TextBoxFor(m => m.Profil.Ville, new { @class = "form-control", placeholder = "20 euros", required = "" })

                @Html.ValidationMessageFor(m => m.Profil.Ville)
            </div>
            <div class="form-input">
                <div class="form-input">
                    @Html.DropDownListFor(m => m.Profil.Departement,
                     new SelectList(Enum.GetValues(typeof(Departement))),
                     "Selectionner un Département")
                </div>
            </div>

            <div class="form-control">
                   @Html.LabelFor(m => m.Image, htmlAttributes: new { @class = "control-label" })     

                @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "file", accept = "image" })
                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })

            </div>

            <div class="submit-button text-lg-right">
                <button type="submit" value="Save">Déposer</button>
                <button type="reset">Effacer</button>
            </div>
        }

    </div>

</body>
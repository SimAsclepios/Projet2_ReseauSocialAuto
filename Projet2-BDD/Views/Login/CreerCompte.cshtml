@model Projet2_BDD.Models.Utilisateur

@{
    Layout = "~/Views/Shared/LayoutTest.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreerCompte</title>
</head>
<body>
    @using (Html.BeginForm("CreerCompte", "Login"))
    {
        <div class="form-input">
            @Html.LabelFor(m => m.Prenom)
            @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control", placeholder = "Prénom", required = "" })

            @Html.ValidationMessageFor(m => m.Prenom)
        </div>
        <div class="form-input">
            @Html.LabelFor(m => Model.Nom)
            @Html.TextBoxFor(m => Model.Nom, new { @class = "form-control", placeholder = "Nom", required = "" })

        </div>
        <div class="form-input">
            @Html.LabelFor(m => Model.Email)
            @Html.TextBoxFor(m => Model.Email, new { @class = "form-control", type = "email", required = "" })

        </div>
        <div class="form-input">
            @Html.LabelFor(m => Model.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mot de passe" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div>
            <input type="submit" value="Inscription" />
        </div>
    }
</body>
</html>
